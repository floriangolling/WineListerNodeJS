mixin navLink(link, name)
    a(href=link) #{name}

div(class="topnav" style="position:fixed;top:0px;width:100%;z-index:1")
    +navLink('/','Accueil')
    -if(messages.Co)
                .message.Co
                    +navLink('/add',"Ajout d'un vin")
                    +navLink('/vins',"Voir les vins")
                    +navLink('/addstage', 'Ajouter une semaine')
                    +navLink('/stage',"Stage")
                    +navLink('/logout', 'Se deconnecter')
    -else
        +navLink('/register',"S'enregistrer")
        +navLink('/login','Se connecter')